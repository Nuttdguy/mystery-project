
<article class="row">   
    <section class="col col-md-3">
        <div class="list-group">

            <ul>

                <span class="list-group-item active">
                    Tokens
                    <a href="/token/t">// Add token</a>
                </span>

                {{#each tokenData}}
                    <li class="list-group-item">
                        <img src="{{this.imageUrl}}" alt="logo"> 
                        <a href="/token/t/{{this.name}}">{{this.name}}</a>
                        <span>(
                        {{#tallyCount this.popularity}} 
                            {{ this }} 
                        {{/tallyCount}} 
                        )</span>
                    </li>
                {{/each}}
                
            </ul>

        </div>

    </section>

    <section class="col col-md-9"> 
        <table class="table table-striped table-hover ">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Add Date</th>
                    <th>Logo</th>
                    <th>Token Name</th>
                    <th>Description</th>
                    <th>Added By</th>
                    <th>Up Vote</th>
                    <th>Down Vote</th>
                    {{!-- <th>Total Votes</th> --}}
                    <th>Vote</th>
                </tr>
            </thead>
            <tbody>
                {{#each tokenData}} 
                <tr>
                    <td>{{@index }}</td>
                    <td>{{#formatDate this.createdAt}} {{ this }} {{/formatDate}} </td>
                    <td><img src="{{this.imageUrl}}" alt="logo"></td>
                    <td>{{this.name }}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.addedBy }}</td>
                    <td>{{this.popularity.count }}</td>
                    <td>{{this.popularity.downCount }}</td>
                    {{!-- <td>{{#tallyCount this.popularity}} 
                            {{ this }} 
                        {{/tallyCount}} 
                    </td> --}}
                    <td>
                        <a href="/token/t/{{this._id}}/1">up</a>
                        <a href="/token/t/{{this._id}}/2">down</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>

    </section>
</article>