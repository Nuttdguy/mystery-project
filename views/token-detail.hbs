<div class="container">

    <div class="form-container">

        <h3>{{tokenData.name}} | Details</h3>
        <div class="token-data">
            <dl>
                <small>{{tokenData.addedBy}} :: 
                    <small>
                        {{tokenData.createdAt}} >> 
                        Last updated {{tokenData.updatedAt}}
                        Popularity ({{tokenData.count}})
                    </small>
                </small>

                <dt>Token name: 
                    <span>{{tokenData.name}}</span>
                    <span>Popularity ({{tokenData.popularity.count}}) </span>
                </dt>

                <dt>Image Url:
                    <span><img src="{{tokenData.imageUrl}}" alt="Token image"></span>
                </dt>

                <dt>Token origin:
                    <span>{{tokenData.originDate}}</span>
                </dt>

                <dt>Token description
                    <span>{{tokenData.description}}</span>
                </dt>
            </dl>
        </div>

    </div>

</div>
